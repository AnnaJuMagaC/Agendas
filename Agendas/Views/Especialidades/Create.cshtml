@model Agendas.Models.Especialidade

@{
	ViewData["Title"] = "Cradastro de Especialidades";
}

<div class="container mt-5">
	<h1 class="text-center display-5 " style="color: #19183B"> <i class="bi bi-bandaid"></i> Cadastro de <span class="fw-bold">Especialidades</span></h1>

	<form asp-action="Create">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>

		<div class="form-group">
			<label asp-for="Nome" class="control-label"></label>
			<input asp-for="Nome" class="form-control" style="background-color: #A1C2BD" />
			<span asp-validation-for="Nome" class="text-danger"></span>
		</div>

		<div class="row gap-3 mt-3 mb-3">
			<div class="col-12 d-flex justify-content-between">
				<div>
					<a asp-action="Index" class="my-2" style="color: #19183B">Cancelar</a>
				</div>

				<div class="form-group">
					<input type="submit" value="Create" class="btn my-2" style="background-color: #19183B; color: #E7F2EF; border: 1px #E7F2EF" />
				</div>

			</div>
		</div>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
